{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "terraform": {
    "managerFilePatterns": [
      "/\\.tf$/",
      "/\\.tofu$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/(^|/)kustomization\\.ya?ml(\\.j2)?$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.tf$/",
        "/\\.tofu$/",
        "/\\.tftpl$/",
        "/\\.yaml$/",
        "/\\.yml$/",
        "/\\.sh$/",
        "/\\.tfvars/"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?"
      ]
    }
  ],
  "packageRules": [
    {
      "groupName": "Talos System",
      "matchPackageNames": [
        "siderolabs/talos",
        "**/talos**"
      ]
    },
    {
      "groupName": "Monitoring Stack",
      "matchPackageNames": [
        "prometheus-community/**",
        "grafana/**",
        "**/loki**",
        "**/promtail**"
      ]
    },
    {
      "groupName": "ArgoCD",
      "matchPackageNames": [
        "**/argo-cd**",
        "argoproj/**"
      ]
    },
    {
      "groupName": "Cilium",
      "matchPackageNames": [
        "/cilium/"
      ]
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "matchDepTypes": [
        "provider",
        "required_provider"
      ],
      "groupName": "Terraform Providers"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}