{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "kubernetes/infra/**/*.yaml",
      "kubernetes/infra/**/*.yml"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "kubernetes/infra/**/kustomization.yaml",
      "kubernetes/infra/**/kustomization.yml"
    ]
  }
}