{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":dependencyDashboard",
    ":semanticCommits",
    "docker:enableMajor"
  ],
  "automerge": false,
  "prCreation": "immediate",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "terraform": {
    "fileMatch": [
      "\\.tf$",
      "\\.tofu$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "kubernetes/.+\\.yaml$",
      "kubernetes/.+\\.yml$"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "(^|/)kustomization\\.ya?ml(\\.j2)?$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.tf$",
        "\\.tofu$",
        "\\.tftpl$",
        "\\.yaml$",
        "\\.yml$",
        "\\.sh$",
        "\\.tfvars$"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?",
        "talos_version\\s*=\\s*\"(?<currentValue>.*?)\"",
        "kubernetes_version\\s*=\\s*\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "siderolabs/talos"
    }
  ],
  "packageRules": [
    {
      "groupName": "Talos System",
      "matchPackageNames": [
        "siderolabs/talos",
        "**/talos**"
      ],
      "automerge": false
    },
    {
      "groupName": "Monitoring Stack",
      "matchPackageNames": [
        "prometheus-community/**",
        "grafana/**",
        "**/loki**",
        "**/promtail**"
      ],
      "automerge": false
    },
    {
      "groupName": "ArgoCD",
      "matchPackageNames": [
        "**/argo-cd**",
        "argoproj/**"
      ],
      "automerge": false
    },
    {
      "groupName": "Cilium",
      "matchPackageNames": [
        "/cilium/"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "matchDepTypes": [
        "provider",
        "required_provider"
      ],
      "groupName": "Terraform Providers",
      "automerge": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "description": "Never auto-merge anything - always create pull requests",
      "matchUpdateTypes": ["minor", "patch", "major", "digest"],
      "automerge": false
    }
  ]
}
