apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: platform-api
  namespace: argocd
  labels:
    platform.layer: api
    enterprise.tier: platform
    team: timour
  annotations:
    argocd.argoproj.io/sync-wave: "14"
spec:
  goTemplate: true
  generators:
    # ðŸš€ ENTERPRISE PATTERN: API Platform Services
    - list:
        elements:
          # API Gateway Platform
          - name: gateway
            path: kubernetes/platform/api/gateway
            namespace: api-gateway
            critical: "true"
            component: "api-gateway"
            wave: "14"
            enabled: "false"  # To be implemented
          # API Lifecycle Management
          - name: management
            path: kubernetes/platform/api/management
            namespace: api-management
            critical: "false"
            component: "api-lifecycle"
            wave: "15"
            enabled: "false"  # To be implemented
          # Kong API Gateway (High-Performance)
          - name: kong
            path: kubernetes/platform/api/kong
            namespace: kong
            critical: "false"
            component: "enterprise-gateway"
            wave: "14"
            enabled: "false"  # Alternative gateway
          # Ambassador Edge Stack
          - name: ambassador
            path: kubernetes/platform/api/ambassador
            namespace: ambassador
            critical: "false"
            component: "k8s-native-gateway"
            wave: "14"
            enabled: "false"  # K8s-native alternative
          # GraphQL Federation Gateway
          - name: federation
            path: kubernetes/platform/api/federation
            namespace: graphql
            critical: "false"
            component: "graphql-federation"
            wave: "15"
            enabled: "false"  # Modern API architecture
          # API Security & Rate Limiting
          - name: security
            path: kubernetes/platform/api/security
            namespace: api-security
            critical: "true"
            component: "api-security"
            wave: "15"
            enabled: "false"  # Security layer
  template:
    metadata:
      name: 'platform-api-{{.name}}'
      labels:
        platform.layer: api
        platform.component: '{{.component}}'
        platform.critical: '{{.critical}}'
        app.kubernetes.io/managed-by: argocd
        team: timour
      annotations:
        argocd.argoproj.io/sync-wave: '{{.wave}}'
    spec:
      project: app-of-apps
      source:
        repoURL: https://github.com/Tim275/talos-homelab
        targetRevision: HEAD
        path: '{{.path}}'
      destination:
        server: https://kubernetes.default.svc
        namespace: '{{.namespace}}'
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
        syncOptions:
          - CreateNamespace=true
          - ServerSideApply=true